---
layout: 'base.njk'
title: Blog
---


<section class='my-24'>
    <div class="px-[10%] flex justify-between mb-16 items-center text-gray-700">
    <h2 class='text-5xl font-semibold '>Articles . . .</h2>
    </div>
    <ul class="grid grid-cols-3 gap-12 px-[10%] text-gray-700">
    {%- for blog in collections.blog -%}
       
        <li>
           <article>
            <img src="{{ blog.data.image }}" alt="{{ blog.data.imgAlt}}">
            <h2 class="text-2xl font-semibold py-4">{{ blog.data.title }}</h2>
            <p class='mb-4'>{{ blog.data.description }}</p>
          
                <p class="font-semibold mb-6">{{ blog.data.author }}</p>
                <a href="{{ blog.url }}" class="bg-zinc-700 text-white px-7 py-3 rounded-sm text-sm">Read more &rarr;</a>
        
           
           </article>
        </li>
      
    {%- endfor -%}
    </ul>
</section>
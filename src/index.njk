</div>
{# articles #}

<section class='bg-gray-100 py-28'>
    
    <ul class="grid grid-cols-3 gap-12 px-[10%] ">
    {%- for blog in collections.blog | reverse -%}
        {% if loop.index0 < 3 %}
        <li>
            <a href="{{ blog.url }}">
           <article>
            <img class="aspect-16/9" src="{{ blog.data.image }}" alt="{{ blog.data.imgAlt}}">
            <h2 class="text-2xl font-bold py-4 text-gray-800">{{ blog.data.title }}</h2>
            <p class="mb-8">{{ blog.data.description }}</p>
           
            
           </article>
           </a>
        </li>
        {% endif %}
    {%- endfor -%}
    </ul>
</section>




<section class='flex justify-between px-[10%] gap-6 items-center bg-violet-800 ' > 
    <div class=''>
    <p class='text-7xl font-bold mb-6 text-violet-300'>YES,<br>YOU CAN!</p>
    <p class='pr-6 text-violet-200 text-xl'>Anchored your life to Jesus. Trust Him deeply; with all our heart & soul. Because by God's power, you can do everything through Him.
    <br><br>
    <span class='font-bold'>“Anyone who believes in him will never be put to shame.”</span><br>
    <em>-Romans 10:11</em> <br><br>

    </p>
     
    </div>
    <img src="../assets/img1.webp" alt="" class=''>   
</section>


















<section class='my-14'>
    <div class="px-[10%] flex justify-between mb-16 items-center text-gray-700">
    <h2 class='text-5xl font-semibold '>Daily Dose of Wisdom</h2>
    <a href="/devotional" class="text-orange-500">Read more &rarr;</a>
    </div>
    <ul class="grid grid-cols-5 gap-2 px-[10%] ">
    {%- for dev in collections.dev -%}
        {% if loop.index0 < 5 %}
        <a href="{{ dev.url }}"> 
       
        <li class="shadow-lg p-4">
           <article>
            <p class='pl-2'>{{ dev.data.month }}</p>
            <h2 class="text-7xl font-semibold py-4 -mt-4 text-orange-500">{{ dev.data.day }}</h2>
            <p class="-mt-4 pl-2 mb-4">{{ dev.data.year }}</p>
            <p>{{ dev.data.verse }}</p>
         
        
           
           </article>
        </li>
    
    </a>
        {% endif %}
    {%- endfor -%}
    </ul>
</section>

<section>
    <ul class='grid grid-cols-3 gap-6 px-[10%]'>
          {%- for pods in collections.pods -%}
        {% if loop.index0 < 3 %}
        <a href="{{ tags.url }}">
            <li>
                <iframe class="w-full h-full " width="800" height="600" src="{{ pods.data.link }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture;" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>

                 <h2 class='font-bold text-zinc-800 pt-8 pb-4 text-2xl'>{{ pods.data.title }}</h2>
                    <p>{{ pods.data.description }}</p>
            </li>
        </a>
          {% endif %}
    {%- endfor -%}
    </ul>
</section>





<section class="flex gap-4 justify-around py-8 items-center bg-zinc-800 text-zinc-400">
<p>Subscribe now:</p>
<form action="">
<input type="email" placeholder="Type your email here..." class="w-[500px]">
<button class="text-zinc-300 bg-violet-500 rounded-sm px-8 py-2">Subscribe</button>
</form>
</section>

